<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/activity_main"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context=".MainActivity">    <EditText        android:id="@+id/email"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="@string/email_hint"        android:inputType="textEmailAddress" />    <EditText        android:id="@+id/pass"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="@string/pass_hint"        android:inputType="textPassword" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="15sp"        android:layout_marginRight="15sp"        android:orientation="horizontal">        <Button            android:id="@+id/signin"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:text="@string/signin" />        <Button            android:id="@+id/register"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:text="@string/register" />    </LinearLayout>    <TextView        android:id="@+id/forgotPass"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="@string/forgotpass" />    <com.facebook.login.widget.LoginButton        android:id="@+id/login_button"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center_horizontal"        android:layout_marginTop="30dp"        android:layout_marginBottom="30dp" /></LinearLayout>